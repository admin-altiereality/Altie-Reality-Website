  <script>
(function() {
  // Initialize modal elements
  const demoModal = document.getElementById('bookDemoModal');
  const surveyStep = document.getElementById('demoSurveyForm');
  const calendlyStep = document.getElementById('demoCalendlyStep');
  const progressBar = document.getElementById('demoStepProgress');
  const surveyForm = document.getElementById('demoSurveyForm');
  const restoreBtn = document.getElementById('restoreDemoModalBtn');
  const successTemplate = document.getElementById('successStepTemplate');
  let successStep = null; // Will be created only when needed
  
  // Function to completely reset modal state
  function resetModalState() {
    // Clear all storage
    localStorage.removeItem('demoSurveyData');
    localStorage.removeItem('demoDraft');
    sessionStorage.removeItem('demoSuccessShown');
    
    // Reset UI elements
    if (surveyStep) surveyStep.style.display = 'block';
    if (calendlyStep) calendlyStep.style.display = 'none';
    
    // Remove success step if it exists
    if (successStep) {
      successStep.remove();
      successStep = null;
    }
    
    if (progressBar) {
      progressBar.style.width = '50%';
      progressBar.setAttribute('aria-valuenow', '50');
    }
    if (surveyForm) surveyForm.reset();
    
    // Hide restore button
    if (restoreBtn) restoreBtn.style.display = 'none';
  }

  // Function to show success message
  function showSuccessMessage() {
    // Only create and show success step if it doesn't exist
    if (!successStep) {
      successStep = successTemplate.content.cloneNode(true).querySelector('#demoSuccessStep');
      document.getElementById('demoModalBody').appendChild(successStep);
    }
    surveyStep.style.display = 'none';
    calendlyStep.style.display = 'none';
    successStep.style.display = 'block';
    progressBar.style.width = '100%';
    progressBar.setAttribute('aria-valuenow', '100');
  }

  // Reset on page load
  window.addEventListener('load', resetModalState);
  
  // Reset when modal is opened
  if (demoModal) {
    demoModal.addEventListener('show.bs.modal', resetModalState);
  }

  // Handle survey form submission
  if (surveyForm) {
    surveyForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Save survey data
      const formData = {
        interest: document.getElementById('interest').value,
        org: document.getElementById('org').value,
        focus: document.getElementById('focus').value
      };
      localStorage.setItem('demoSurveyData', JSON.stringify(formData));
      
      // Show calendly step
      surveyStep.style.display = 'none';
      calendlyStep.style.display = 'block';
      progressBar.style.width = '100%';
      progressBar.setAttribute('aria-valuenow', '100');
      
      // Initialize Calendly
      const calendlyUrl = `https://calendly.com/f20231050-goa/30min?a1=${encodeURIComponent(formData.interest)}&a2=${encodeURIComponent(formData.org)}&a3=${encodeURIComponent(formData.focus)}`;
      const calendlyDiv = document.getElementById('dynamicCalendlyWidget');
      calendlyDiv.innerHTML = '';
      const widget = document.createElement('div');
      widget.className = 'calendly-inline-widget';
      widget.setAttribute('data-url', calendlyUrl);
      widget.style.minWidth = '320px';
      widget.style.width = '100%';
      widget.style.height = '630px';
      calendlyDiv.appendChild(widget);
      
      // Load Calendly script
      const script = document.createElement('script');
      script.src = 'https://assets.calendly.com/assets/external/widget.js';
      script.async = true;
      document.body.appendChild(script);
      
      // Listen for booking completion
      window.addEventListener('message', function calListener(e) {
        if (e.data.event === 'calendly.event_scheduled') {
          window.removeEventListener('message', calListener);
          showSuccessMessage();
          // Clear all storage after successful booking
          localStorage.removeItem('demoSurveyData');
          localStorage.removeItem('demoDraft');
          sessionStorage.setItem('demoSuccessShown', 'true');
        }
      });
    });
  }

  // Save form data on every input change
  ['interest', 'org', 'focus'].forEach(function(id) {
    const el = document.getElementById(id);
    if (el) {
      el.addEventListener('input', function() {
        const formData = {
          interest: document.getElementById('interest').value,
          org: document.getElementById('org').value,
          focus: document.getElementById('focus').value,
          step: (calendlyStep && calendlyStep.style.display === 'block') ? 'calendly' : 'survey',
          progress: progressBar ? progressBar.style.width : '50%'
        };
        localStorage.setItem('demoSurveyData', JSON.stringify(formData));
      });
    }
  });

  // Handle minimize button
  const minimizeBtn = document.getElementById('minimizeDemoModal');
  if (minimizeBtn && demoModal) {
    minimizeBtn.addEventListener('click', function() {
      // Save form data and step
      const formData = {
        interest: document.getElementById('interest').value,
        org: document.getElementById('org').value,
        focus: document.getElementById('focus').value,
        step: (calendlyStep && calendlyStep.style.display === 'block') ? 'calendly' : 'survey',
        progress: progressBar ? progressBar.style.width : '50%'
      };
      localStorage.setItem('demoSurveyData', JSON.stringify(formData));
      localStorage.setItem('demoDraft', '1');
      const bsModal = bootstrap.Modal.getInstance(demoModal);
      if (bsModal) bsModal.hide();
      if (restoreBtn) restoreBtn.style.display = 'block';
    });
  }

  // Always restore form data and step on modal show
  if (demoModal) {
    demoModal.addEventListener('show.bs.modal', function() {
      const formData = JSON.parse(localStorage.getItem('demoSurveyData') || '{}');
      if (formData && (formData.interest || formData.org || formData.focus)) {
        alert('Restoring your previous demo booking data!');
        if (formData.interest) document.getElementById('interest').value = formData.interest;
        if (formData.org) document.getElementById('org').value = formData.org;
        if (formData.focus) document.getElementById('focus').value = formData.focus;
        if (formData.step === 'calendly') {
          surveyStep.style.display = 'none';
          calendlyStep.style.display = 'block';
        } else {
          surveyStep.style.display = 'block';
          calendlyStep.style.display = 'none';
        }
        if (progressBar && formData.progress) {
          progressBar.style.width = formData.progress;
          progressBar.setAttribute('aria-valuenow', formData.progress.replace('%',''));
        }
      }
    });
  }

  // Only reset/clear on full close
  if (demoModal) {
    demoModal.addEventListener('hidden.bs.modal', function() {
      if (!localStorage.getItem('demoDraft')) {
        resetModalState();
      }
    });
  }

  // Handle restore button
  if (restoreBtn && demoModal) {
    restoreBtn.addEventListener('click', function() {
      const bsModal = bootstrap.Modal.getInstance(demoModal);
      if (bsModal) bsModal.show();
      localStorage.removeItem('demoDraft');
      restoreBtn.style.display = 'none';
    });
  }

  // Handle back button
  const backBtn = document.getElementById('goBackToSurvey');
  if (backBtn) {
    backBtn.addEventListener('click', function(e) {
      e.preventDefault();
      calendlyStep.style.display = 'none';
      surveyStep.style.display = 'block';
      progressBar.style.width = '50%';
      progressBar.setAttribute('aria-valuenow', '50');
    });
  }
})();
